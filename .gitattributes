# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# JSON files
*.json text eol=lf

# YAML files
*.yml text eol=lf
*.yaml text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude files from export
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
tests export-ignore
*.md export-ignore
